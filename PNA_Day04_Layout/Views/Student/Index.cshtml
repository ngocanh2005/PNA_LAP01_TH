@model IEnumerable<Student>
@{
}
<a asp-action="Create" class="btn btn-primary"> Create Student
</a>
<table class=" table table striped">
    <thead>
        <tr>
            <th>Ma</th>
            <th>Ten</th>
            <th>NgaySinh</th>
            <th>GioiTinh</th>
            <th>DiaChi</th>
            <th>Nganh</th>
            <th>He DT</th>
            <th>Nganh</th>
            <th>Anh dai dien</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var s in Model)
        {
            <tr> 
                <td>@s.Id</td>
                <td> @s.Name</td>
                <td>@s.DateOfBorth</td>
                @{
                    string str = "";
                    switch (s.Branch)
                    {
                        case BranchType.IT:
                            str = "CNTT";
                            break;
                        case BranchType.BE:
                            str = "King te";
                            break;
                        case BranchType.CE:
                            str = "Cong trinh";
                            break;
                        case BranchType.EE:
                            str = "Dien-Dien tu";
                            break;
                        
                    }
                }
                <td>@str</td>
                <td>@(s.Gender==GenderType.Male? "Nam":"Nu")</td>
                <td>@(s.IsRegular?"ChinhQuy": "Phi chinh quy")</td>
                <td> @s.Adddress</td>
                <td>@s.Email</td>
                <td>
                    @if(!string.IsNullOrEmpty(s.AvatarUrl))
                    {
                        <img src="~/images/@s.AvatarUrl" alt="Avatar" width="100" height="100" class="rounded-circle" />
                    }
                    else
                    {
                        <span>No Avatar</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
